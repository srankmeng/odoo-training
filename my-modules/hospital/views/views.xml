<odoo>
  <data>

    <!-- sale order add patient field -->
    <record id="sale_order_inherit" model="ir.ui.view">
        <field name="name">sale.order.inherit</field>
        <field name="model">sale.order</field>
        <field name="inherit_id" ref="sale.view_order_form"/>
        <field name="arch" type="xml">
          <field name="partner_id" position="after">
            <field name="patient_name"/>
          </field>
        </field>
    </record>

    <!-- patient tree view -->
    <record id="patient_tree" model="ir.ui.view">
      <field name="name">hospital.patient.tree</field>
      <field name="model">hospital.patient</field>
      <field name="arch" type="xml">
        <tree string="Patients">
          <field name="name_seq"/>
          <field name="patient_name"/>
          <field name="patient_name"/>
          <field name="patient_age"/>
          <field name="note"/>
        </tree>
      </field>
    </record>

    <!-- patient form view -->
    <record id="patient_form" model="ir.ui.view">
      <field name="name">hospital.patient.form</field>
      <field name="model">hospital.patient</field>
      <field name="arch" type="xml">
        <form string="Patients">
          <sheet>
            <div class="oe_title">
              <h1><field name="name_seq" readonly="1"/></h1>
            </div>
            <group>
              <group><field name="patient_name"/></group>
              <group><field name="patient_age"/></group>
            </group>
            <group>
              <field name="note"/>
              <field name="image"/>
            </group>
          </sheet>

          <!-- Chatter -->
          <div class="oe_chatter">
            <field name="message_follower_ids" widget="mail_followers"/>
            <field name="activity_ids" widget="mail_activity"/>
            <field name="message_ids" widget="mail_thread" options="{'post_refresh': 'recipients'}"/>
          </div>
        </form>
      </field>
    </record>

    <!-- window -->
    <record id="action_patient" model="ir.actions.act_window">
      <field name="name">Patients</field>
      <field name="type">ir.actions.act_window</field>
      <field name="res_model">hospital.patient</field>
      <field name="view_mode">tree,form</field>
      <field name="help" type="html">
        <p class="o_view_nocontent_smiling_face">
          Create a patient
        </p>
      </field>
    </record>

    <!-- Top menu item -->

    <menuitem name="Hospital" id="hospital.root" sequence="0"/>
    <menuitem name="Patients" id="hospital.patient" parent="hospital.root" action="action_patient"/>

  </data>
</odoo>
<odoo>
  <data>

    <!-- doctor tree view -->
    <record id="doctor_tree" model="ir.ui.view">
      <field name="name">hospital.doctor.tree</field>
      <field name="model">hospital.doctor</field>
      <field name="arch" type="xml">
        <tree string="Doctors">
          <field name="code"/>
          <field name="name"/>
          <field name="gender"/>
          <field name="age"/>
          <field name="note"/>
        </tree>
      </field>
    </record>

    <!-- doctor form view -->
    <record id="doctor_form" model="ir.ui.view">
      <field name="name">hospital.doctor.form</field>
      <field name="model">hospital.doctor</field>
      <field name="arch" type="xml">
        <form string="Doctors">
          <sheet>
            <div class="oe_title">
              <h1>
                <field name="name" required="True"/>
              </h1>
            </div>
            <group>
              <group>
                <field name="code" readonly="1"/>
                <field name="related_user"/>
              </group>
              <group>
                <field name="gender"/>
                <field name="age"/>
              </group>
            </group>
            <group>
              <field name="note"/>
            </group>
          </sheet>

          <!-- Chatter -->
          <div class="oe_chatter">
            <field name="message_follower_ids" widget="mail_followers"/>
            <field name="activity_ids" widget="mail_activity"/>
            <field name="message_ids" widget="mail_thread" options="{'post_refresh': 'recipients'}"/>
          </div>
        </form>
      </field>
    </record>

    <!-- custom search & filter -->
    <record id="hospital_doctor_search" model="ir.ui.view">
      <field name="name">hospital.doctor.search</field>
      <field name="model">hospital.doctor</field>
      <field name="arch" type="xml">
        <search string="Search Doctors">
          <field name="name" filter_domain="['|', ('name','ilike',self), ('code','ilike',self)]"/>
          <field name="code"/>
          <separator/>
          <filter string="Male" name="male" domain="[('gender', '=', 'male')]"/>
          <filter string="Female" name="female" domain="[('gender', '=', 'female')]"/>
          <group expand="0" string="Group By">
            <filter string="Gender" name="gender" context="{'group_by':'gender'}" />
          </group>
        </search>
      </field>
    </record>


    <!-- menu -->
    <record id="action_doctor" model="ir.actions.act_window">
      <field name="name">Doctors</field>
      <field name="type">ir.actions.act_window</field>
      <field name="res_model">hospital.doctor</field>
      <field name="view_mode">tree,form</field>
      <field name="context" eval="{}"/>
      <field name="help" type="html">
        <p class="o_view_nocontent_smiling_face">
          Create a doctor
        </p>
      </field>
    </record>

    <menuitem name="Doctors" id="hospital.doctor" parent="hospital.root" action="action_doctor" sequence="3"/>

  </data>
</odoo>